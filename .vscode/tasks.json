{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "Remove-Item â€“path ${workspaceFolder}\\build\\* -recurse"
            }
        },
        {
            "label": "copy",
            "type": "shell",
            "windows": {
                "command": "Get-ChildItem -Path ${workspaceFolder}\\src\\* | Copy-Item -Force -Recurse -Destination '${workspaceFolder}\\build'"
            }
        },
        {
          "label": "Build",
          "dependsOrder": "sequence",
          "dependsOn": ["clean", "copy"],
          "group": {
            "kind": "build",
            "isDefault": true
          },
        }
    ]
}